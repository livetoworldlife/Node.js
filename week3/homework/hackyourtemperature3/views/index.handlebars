<form action="/weather" method="POST" class="mb-4">
  <div class="form-group">
    <label for="name" class="text-info">HackYourTemperature App</label>
    <input type="text" name="cityName" class="form-control" placeholder="Enter a City">
  </div>
  <div class="md-4 text-center">
    <button type="submit" class="btn btn-info">Submit <span class="glyphicon glyphicon-send"></span></button>
  </div>
  <div class="mt-4 text-center">
    <p>{{weatherText}}</p>
  </div>

</form>